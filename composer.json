{
    "require": {
        "php": ">=8.2",
        "slim/slim": "3.*",
        "twig/twig": "3.*",
        "illuminate/database": "11.*",
        "ext-mysqli": "*",
        "ext-pdo": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4" : {
            "src\\" : "./src/"
        }
    },
    "config": {
        "allow-plugins": {
            "kylekatarnls/update-helper": true
        }
    },
    "scripts": {
        "test": "phpunit --bootstrap vendor/autoload.php tests"
    }
}
