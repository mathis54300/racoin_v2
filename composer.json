{
  "require": {
    "php": ">=8.2",
    "slim/slim": "^4.0",
    "slim/psr7": "^1.6",
    "php-di/php-di": "^6.4.0",
    "php-di/slim-bridge": "^3.2",
    "twig/twig": "3.*",
    "slim/twig-view": "^3.3",
    "illuminate/database": "11.*",
    "ext-mysqli": "*",
    "ext-pdo": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0"
  },
  "autoload": {
    "psr-4": {
      "src\\": "./src/"
    }
  },
  "config": {
    "allow-plugins": {
      "kylekatarnls/update-helper": true
    }
  },
  "scripts": {
    "test": "phpunit --bootstrap vendor/autoload.php tests"
  }
}
